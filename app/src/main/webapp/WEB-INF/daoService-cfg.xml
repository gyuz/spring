<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">
  
     <bean id="personDao" class="crud.core.dao.PersonDao">
         <property name="sessionFactory" ref="sessionFactory" />
     </bean>
     <bean id="roleDao" class="crud.core.dao.RoleDao">
         <property name="sessionFactory" ref="sessionFactory" />
     </bean>
     <bean id="contactDao" class="crud.core.dao.ContactDao">
         <property name="sessionFactory" ref="sessionFactory" />
     </bean>
     <bean id="sessionGroup" class="crud.core.dao.SessionGroup">
         <property name="sessionFactory" ref="sessionFactory" />
     </bean>
     
     <bean id="personService" class="crud.core.service.PersonOperations">
         <property name="personDao" ref="personDao" />
     </bean>
     <bean id="roleService" class="crud.core.service.RoleOperations">
         <property name="roleDao" ref="roleDao" />
     </bean>
     <bean id="contactService" class="crud.core.service.ContactOperations">
         <property name="contactDao" ref="contactDao" />
     </bean>
 
</beans>
